{
    "name": "kill-ring",
    "displayName": "kill-ring",
    "description": "Emacs' kill-ring in VS Code",
    "version": "0.0.1",
    "publisher": "dvkt",
    "engines": {
        "vscode": "^1.26.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:kill-ring.kill",
        "onCommand:kill-ring.yank"
    ],
    "main": "./extension",
    "contributes": {
        "commands": [
            {
                "command": "kill-ring.kill",
                "title": "kill-ring: Kill to end of line"
            },
            {
                "command": "kill-ring.yank",
                "title": "kill-ring: Yank last killed"
            }
        ],
        "keybindings": [
            {
              "key": "ctrl+k",
              "command": "kill-ring.kill",
              "when": "textInputFocus && !editorReadonly"
            },
            {
              "key": "ctrl+y",
              "command": "kill-ring.yank",
              "when": "textInputFocus && !editorReadonly"
            }
          ]
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
